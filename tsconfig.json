{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "typeRoots": ["src/shared/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/__tests__/**"]
}